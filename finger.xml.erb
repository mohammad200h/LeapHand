<%
    require 'erb'
    require 'matrix'
    require_relative "finger"

    finger = Finger.new()
%>

<mujoco>
  <compiler angle="radian" meshdir="assets"  autolimits="true"/>

  <asset>
    <%=finger.assets_xml%>
  </asset>

  <default>
    <%=finger.default_xml%>
  </default>

  <worldbody>
    <%=finger.body_xml%>
  </worldbody>

  <actuator>
    <%=finger.actuator_xml%>
  </actuator>

</mujoco>
