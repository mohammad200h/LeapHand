<%
    require 'erb'
    require 'matrix'
    require_relative "finger"

    finger = Finger.new(body_pose=[0,0,0,0,0,0,1],prefix=nil,
                        compute_inertia=false,left=false,is_child=false)
%>

<mujoco>
  <compiler angle="radian" meshdir="assets"  autolimits="true"/>

  <asset>
    <%=finger.assets_xml%>
  </asset>

  <default>
    <%=finger.default_xml%>
  </default>

  <worldbody>
    <%=finger.body_xml%>
  </worldbody>

  <actuator>
    <%=finger.actuator_xml%>
  </actuator>

</mujoco>
